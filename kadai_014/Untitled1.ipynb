        "    # ローカルスコープの範囲内でローカル変数を使う\n",
        "    print(price2)\n",
        "\n",
        "    tax = 1.1\n",
        "    return (price1 + price2) * tax\n",
        "\n",
        "# total関数を呼び出し、結果を出力する\n",
        "print(total())"
